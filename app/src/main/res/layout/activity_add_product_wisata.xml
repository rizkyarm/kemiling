<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#90b490"
    tools:context=".addProductWisata">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="30dp">

                <!-- Tombol Kembali -->
                <ImageView
                    android:id="@+id/btn_back3"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="16dp"
                    android:src="@drawable/back_btn" />

                <!-- Nama Wisata -->
                <TextView
                    android:id="@+id/textView5"
                    style="@style/LabelStyle"
                    android:text="Nama Wisata" />

                <EditText
                    android:id="@+id/editwisata"
                    style="@style/EditFieldStyle"
                    android:hint="Wisata" />

                <!-- Harga Weekday -->
                <TextView
                    android:id="@+id/textView10"
                    style="@style/LabelStyle"
                    android:text="Harga Weekday" />

                <EditText
                    android:id="@+id/editweekday"
                    style="@style/EditFieldStyle"
                    android:hint="Rp.0" />

                <!-- Harga Weekend -->
                <TextView
                    android:id="@+id/textView11"
                    style="@style/LabelStyle"
                    android:text="Harga Weekend" />

                <EditText
                    android:id="@+id/editweekend"
                    style="@style/EditFieldStyle"
                    android:hint="Rp.0" />

                <!-- Jam Operasional -->
                <TextView
                    android:id="@+id/textView12"
                    style="@style/LabelStyle"
                    android:text="Jam Operasional" />

                <EditText
                    android:id="@+id/editjam"
                    style="@style/EditFieldStyle"
                    android:hint="Contoh : 09:00 - 18:00" />

                <!-- Alamat -->
                <TextView
                    android:id="@+id/textView13"
                    style="@style/LabelStyle"
                    android:text="Alamat" />

                <EditText
                    android:id="@+id/editalamat"
                    style="@style/EditFieldStyle"
                    android:hint="Alamat" />

                <!-- WhatsApp -->
                <TextView
                    android:id="@+id/textView14"
                    style="@style/LabelStyle"
                    android:text="No WhatsApp" />

                <EditText
                    android:id="@+id/editWA"
                    style="@style/EditFieldStyle"
                    android:hint="+62" />

                <!-- Deskripsi -->
                <TextView
                    android:id="@+id/textView15"
                    style="@style/LabelStyle"
                    android:text="Deskripsi" />

                <EditText
                    android:id="@+id/editdeskripsi"
                    style="@style/EditFieldStyle"
                    android:hint="Deskripsi Wisata" />

                <!-- Gambar Header -->
                <TextView
                    android:id="@+id/textViewImageHeader"
                    style="@style/LabelStyle"
                    android:text="Image Header"
                    android:layout_marginBottom="20dp"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="8dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp">

                    <ImageView
                        android:id="@+id/imageHeader"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:background="@drawable/image_upload"
                        android:contentDescription="Image Header"
                        android:scaleType="centerCrop" />
                </androidx.cardview.widget.CardView>

                <Button
                    android:id="@+id/btnPilihHeader"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/btn1"
                    android:text="Pilih Gambar Header"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/textViewImages"
                    style="@style/LabelStyle"
                    android:text="Additional Images" />


                <!-- Tombol Pilih Lokasi Maps -->
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fillViewport="true">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:layout_width="140dp"
                            android:layout_height="140dp"
                            android:layout_marginEnd="8dp"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="4dp">

                            <ImageView
                                android:id="@+id/image1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/image_upload"
                                android:contentDescription="Additional Image 1"
                                android:scaleType="centerCrop" />
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="140dp"
                            android:layout_height="140dp"
                            android:layout_marginEnd="8dp"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="4dp">

                            <ImageView
                                android:id="@+id/image2"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/image_upload"
                                android:contentDescription="Additional Image 2"
                                android:scaleType="centerCrop" />
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="140dp"
                            android:layout_height="140dp"
                            android:layout_marginEnd="8dp"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="4dp">

                            <ImageView
                                android:id="@+id/image3"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/image_upload"
                                android:contentDescription="Additional Image 3"
                                android:scaleType="centerCrop" />
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="140dp"
                            android:layout_height="140dp"
                            android:layout_marginEnd="8dp"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="4dp">

                            <ImageView
                                android:id="@+id/image4"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/image_upload"
                                android:contentDescription="Additional Image 4"
                                android:scaleType="centerCrop" />
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="140dp"
                            android:layout_height="140dp"
                            android:layout_marginEnd="8dp"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="4dp">

                            <ImageView
                                android:id="@+id/image5"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/image_upload"
                                android:contentDescription="Additional Image 5"
                                android:scaleType="centerCrop" />
                        </androidx.cardview.widget.CardView>

                    </LinearLayout>
                </HorizontalScrollView>

                <Button
                    android:id="@+id/btn_pilih_map"
                    style="@style/ButtonStyle"
                    android:text="Pilih Lokasi Maps" />

                <!-- Tombol Upload -->
                <Button
                    android:id="@+id/btnUploadAll"
                    style="@style/ButtonStyle"
                    android:text="Upload All Data" />

            </LinearLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
